; https://editorconfig.org/

root = true

[*]
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.xml]
indent_style = spaces
indent_size = 4

[*.java]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 8

[*.md]
indent_size = 4
trim_trailing_whitespace = false

[*.sh]
indent_size = 2

eclint_indent_style = unset
